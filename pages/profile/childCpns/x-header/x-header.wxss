/* pages/profile/childCpns/x-header/x-header.wxss */
.header {
  position: relative;
  background: #ff5777;
  height: 200rpx;
  display: flex;
  color: #fff;
}
.avatar {
  background: #eee;
  height: 140rpx;
  width: 140rpx;
  border-radius: 50%;
  text-align: center;
  margin-left: 36rpx;
}

.avatar image {
  height: 100%;
  width: 100%;
}

.login-info {
  margin: 30rpx 0 0 30rpx;
  flex: 1;
}

.login-info .phone {
  font-size: 30rpx;
  margin-top: 16rpx;
}

.phone image {
  vertical-align: middle;
  height: 42rpx;
  width: 42rpx;
}

.arrow {
  position: absolute;
  right: 30rpx;
  top: 50rpx;
  width: 60rpx;
  height: 60rpx;
}

.arrow image {
  width: 100%;
  height: 100%;
}